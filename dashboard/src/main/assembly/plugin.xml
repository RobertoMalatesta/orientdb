<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/xsd/assembly-1.1.1.xsd">

	<id></id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/site</directory>
			<outputDirectory>www</outputDirectory>
			<excludes>
				<include>dashboard/</include>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>download</directory>
			<outputDirectory>download</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/${pom.artifactId}-${pom.version}.jar</source>
			<destName>${pom.artifactId}.jar</destName>
			<outputDirectory>plugins/</outputDirectory>
		</file>
	</files>
</assembly>